<h2>Remplissez le formulaire en indiquant le titre et l'auteur du livre =></h2>
<!-- # La boucle .each pour ressortir les bouquins => -->
<ul id="book-list">
  <% @books.each do |book| %>
    <li>"<%= book.title %>" par <b><%= book.author %></br></li>
  <% end %>
</ul>

<!-- Le formulaire => -->

<div class="form">
  <%= form_tag(books_path, method: :post, class: "form", remote: true) do %>
    <label for="title">Title</label>
    <%= text_field_tag  :title %>

    <label for="author">author</label>
    <%= text_field_tag  :author %>

    <button type="submit" class="btn btn-primary">Submit</button>

  <% end %>
</div>